{
  "manifest_version": 3,
  "name": "Meu Analisador de Produtos",
  "version": "5.0",
  "description": "Uma extens√£o para analisar dados de produtos para uso pessoal.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage" 
  ],
  "host_permissions": [
    "*://*.mercadolivre.com.br/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.mercadolivre.com.br/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_title": "Analisador de Produtos"
  }
}